---
const services = [
  {
    title: "Construction Equipment",
    description: "Specialized engineering solutions for construction machinery, excavators, cranes, bulldozers, and heavy construction equipment manufacturing and maintenance.",
    image: "/assets/photo-1523848309072-c199db53f137_1749678706477.jpg",
    alt: "Construction equipment in mining operation with excavators and dump trucks",
    link: "/construction-equipment"
  },
  {
    title: "Vehicle Equipment",
    description: "Advanced automotive and commercial vehicle engineering, including electric vehicle systems, transmission design, and fleet management solutions.",
    image: "/assets/vehicle_1749678939203.jpg",
    alt: "Commercial vehicle transportation with red truck on highway",
    link: "/vehicle-equipment"
  },
  {
    title: "Agriculture Equipment",
    description: "Comprehensive agricultural machinery engineering, including tractors, harvesters, irrigation systems, and precision farming technology solutions.",
    image: "/assets/agriculture_1749678939203.jpg",
    alt: "Agriculture concept with soil in hands representing farming and cultivation",
    link: "/agriculture-equipment"
  }
];

// Icons as SVG
const icons = {
  hardhat: '<svg class="h-10 w-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"></path></svg>',
  truck: '<svg class="h-10 w-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0"></path></svg>',
  tractor: '<svg class="h-10 w-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path></svg>'
};
---

<section id="services" class="py-24 bg-white">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl lg:text-5xl font-bold text-[hsl(var(--sps-neutral-900))] mb-6">Our Equipment Solutions</h2>
      <p class="text-xl text-[hsl(var(--sps-neutral-500))] max-w-3xl mx-auto leading-relaxed">
        Engineering excellence across three core sectors: construction machinery, commercial vehicles, and agricultural equipment. Built for performance, reliability, and efficiency.
      </p>
    </div>

    <div class="grid lg:grid-cols-3 gap-8">
      {services.map((service, index) => (
        <div class="group bg-[hsl(var(--sps-neutral-50))] rounded-2xl overflow-hidden hover:bg-white hover:shadow-xl transition-all duration-500 transform hover:-translate-y-2 border-0">
          <div class="p-0">
            <div class="mb-6">
              <img
                src={service.image}
                alt={service.alt}
                class="w-full h-48 object-cover rounded-lg"
              />
            </div>
            <div class="p-8">
              <div class="text-[hsl(var(--sps-primary))] mb-4">
                <Fragment set:html={index === 0 ? icons.hardhat : index === 1 ? icons.truck : icons.tractor} />
              </div>
              <h3 class="text-2xl font-semibold text-[hsl(var(--sps-neutral-900))] mb-4">{service.title}</h3>
              <p class="text-[hsl(var(--sps-neutral-500))] leading-relaxed mb-6">
                {service.description}
              </p>
              <a
                href={service.link}
                class="text-[hsl(var(--sps-primary))] font-medium hover:text-[hsl(var(--sps-secondary))] transition-colors duration-200 inline-flex items-center"
              >
                Learn More
                <span class="ml-2 group-hover:translate-x-1 transition-transform duration-200">â†’</span>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
