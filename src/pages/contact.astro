---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const contactInfo = [
  {
    title: "Our Location",
    details: ["123 Engineering Plaza", "Technology District", "Seoul, South Korea 12345"],
    icon: "location"
  },
  {
    title: "Phone",
    details: ["+82-2-1234-5678", "+82-2-1234-5679"],
    icon: "phone"
  },
  {
    title: "Email",
    details: ["info@spseng.com", "projects@spseng.com"],
    icon: "email"
  },
  {
    title: "Business Hours",
    details: ["Monday - Friday: 9:00 AM - 6:00 PM", "Saturday: 10:00 AM - 4:00 PM"],
    icon: "clock"
  }
];

const icons = {
  location: '<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>',
  phone: '<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>',
  email: '<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>',
  clock: '<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>'
};
---

<BaseLayout title="Contact - SPS Engineering">
  <div class="min-h-screen bg-background">
    <Navigation />

    <!-- Hero Section -->
    <section class="gradient-bg text-white py-16 lg:py-24">
      <div class="max-w-7xl mx-auto px-6 lg:px-8 text-center">
        <h1 class="text-4xl lg:text-6xl font-bold mb-6">Contact Us</h1>
        <p class="text-xl lg:text-2xl font-light max-w-3xl mx-auto">
          Ready to discuss your heavy equipment needs? Contact our team of specialists.
        </p>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="py-24 bg-white">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-16">
          <!-- Contact Info -->
          <div>
            <h2 class="text-3xl font-bold text-[hsl(var(--sps-neutral-900))] mb-8">Get In Touch</h2>
            <div class="space-y-8">
              {contactInfo.map((info) => (
                <div class="flex items-start space-x-4">
                  <div class="bg-[hsl(var(--sps-primary))] text-white p-3 rounded-lg flex-shrink-0">
                    <Fragment set:html={icons[info.icon as keyof typeof icons]} />
                  </div>
                  <div>
                    <h3 class="text-xl font-semibold text-[hsl(var(--sps-neutral-900))] mb-2">{info.title}</h3>
                    {info.details.map((detail) => (
                      <p class="text-[hsl(var(--sps-neutral-500))] leading-relaxed">
                        {detail}
                      </p>
                    ))}
                  </div>
                </div>
              ))}
            </div>
          </div>

          <!-- Contact Form -->
          <div class="bg-[hsl(var(--sps-neutral-50))] rounded-2xl p-8">
            <h2 class="text-2xl font-bold text-[hsl(var(--sps-neutral-900))] mb-6">Send us a Message</h2>
            <form
              name="contact"
              method="POST"
              data-netlify="true"
              netlify-honeypot="bot-field"
              class="space-y-6"
            >
              <input type="hidden" name="form-name" value="contact" />
              <p class="hidden">
                <label>
                  Don't fill this out if you're human: <input name="bot-field" />
                </label>
              </p>

              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label for="name" class="block text-sm font-medium text-[hsl(var(--sps-neutral-700))] mb-2">
                    Full Name *
                  </label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full px-4 py-3 border border-neutral-200 rounded-lg focus:ring-2 focus:ring-[hsl(var(--sps-primary))] focus:border-transparent transition-all duration-200"
                    placeholder="Your full name"
                  />
                </div>
                <div>
                  <label for="email" class="block text-sm font-medium text-[hsl(var(--sps-neutral-700))] mb-2">
                    Email Address *
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-3 border border-neutral-200 rounded-lg focus:ring-2 focus:ring-[hsl(var(--sps-primary))] focus:border-transparent transition-all duration-200"
                    placeholder="your.email@company.com"
                  />
                </div>
              </div>

              <div>
                <label for="company" class="block text-sm font-medium text-[hsl(var(--sps-neutral-700))] mb-2">
                  Company
                </label>
                <input
                  type="text"
                  id="company"
                  name="company"
                  class="w-full px-4 py-3 border border-neutral-200 rounded-lg focus:ring-2 focus:ring-[hsl(var(--sps-primary))] focus:border-transparent transition-all duration-200"
                  placeholder="Your company name"
                />
              </div>

              <div>
                <label for="service" class="block text-sm font-medium text-[hsl(var(--sps-neutral-700))] mb-2">
                  Service Interest
                </label>
                <select
                  id="service"
                  name="service"
                  class="w-full px-4 py-3 border border-neutral-200 rounded-lg focus:ring-2 focus:ring-[hsl(var(--sps-primary))] focus:border-transparent transition-all duration-200"
                >
                  <option value="">Select a service</option>
                  <option value="construction">Construction Equipment</option>
                  <option value="vehicle">Vehicle Equipment</option>
                  <option value="agriculture">Agriculture Equipment</option>
                  <option value="parts">Parts & Maintenance</option>
                  <option value="consulting">Technical Consulting</option>
                  <option value="custom">Custom Solutions</option>
                </select>
              </div>

              <div>
                <label for="message" class="block text-sm font-medium text-[hsl(var(--sps-neutral-700))] mb-2">
                  Project Details *
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  required
                  class="w-full px-4 py-3 border border-neutral-200 rounded-lg focus:ring-2 focus:ring-[hsl(var(--sps-primary))] focus:border-transparent transition-all duration-200"
                  placeholder="Please describe your project requirements and timeline..."
                ></textarea>
              </div>

              <button
                type="submit"
                class="w-full bg-[hsl(var(--sps-primary))] hover:bg-[hsl(var(--sps-secondary))] text-white font-semibold py-4 px-6 rounded-lg transition-all duration-300 transform hover:scale-105"
              >
                Send Message
              </button>
            </form>
          </div>
        </div>
      </div>
    </section>

    <Footer />
  </div>
</BaseLayout>
