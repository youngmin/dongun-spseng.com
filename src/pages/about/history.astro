---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';

const timeline = [
  {
    year: "2019",
    title: "Company Established",
    description: "SPS Engineering was founded with a vision to provide specialized engineering solutions across key industrial sectors."
  },
  {
    year: "2020",
    title: "Product Line Expansion",
    description: "Expanded our portfolio to include comprehensive construction machinery solutions including chisels, breakers, and excavator components."
  },
  {
    year: "2021",
    title: "Vehicle Solutions Launch",
    description: "Introduced logistics and lifting solutions for commercial and industrial vehicle applications."
  },
  {
    year: "2022",
    title: "Agriculture Division",
    description: "Launched our agriculture equipment division, providing advanced farming implements and solutions."
  },
  {
    year: "2023",
    title: "Global Expansion",
    description: "Extended our reach to serve clients across multiple continents, establishing ourselves as a trusted global partner."
  },
  {
    year: "2024",
    title: "Innovation & Growth",
    description: "Continued investment in R&D and innovation, expanding our product offerings and engineering capabilities."
  }
];
---

<BaseLayout title="History - SPS Engineering">
  <div class="min-h-screen bg-background">
    <Navigation />

    <!-- Hero Section -->
    <section class="gradient-bg text-white py-16 lg:py-24">
      <div class="max-w-7xl mx-auto px-6 lg:px-8 text-center">
        <h1 class="text-4xl lg:text-6xl font-bold mb-6">Our History</h1>
        <p class="text-xl lg:text-2xl font-light max-w-3xl mx-auto">
          A journey of engineering excellence and innovation
        </p>
      </div>
    </section>

    <!-- Timeline Section -->
    <section class="py-24 bg-white">
      <div class="max-w-5xl mx-auto px-6 lg:px-8">
        <div class="relative">
          <!-- Timeline Line -->
          <div class="absolute left-1/2 transform -translate-x-1/2 h-full w-1 bg-[hsl(var(--sps-neutral-100))] hidden md:block"></div>

          {timeline.map((item, index) => (
            <div class={`mb-12 flex flex-col md:flex-row items-center ${index % 2 === 0 ? 'md:flex-row-reverse' : ''}`}>
              <!-- Content -->
              <div class={`w-full md:w-5/12 ${index % 2 === 0 ? 'md:text-right md:pr-12' : 'md:pl-12'}`}>
                <div class="bg-[hsl(var(--sps-neutral-50))] p-6 rounded-2xl hover:shadow-lg transition-all duration-300">
                  <div class={`text-3xl font-bold text-[hsl(var(--sps-primary))] mb-2`}>
                    {item.year}
                  </div>
                  <h3 class="text-xl font-bold text-[hsl(var(--sps-neutral-900))] mb-3">
                    {item.title}
                  </h3>
                  <p class="text-[hsl(var(--sps-neutral-500))]">
                    {item.description}
                  </p>
                </div>
              </div>

              <!-- Timeline Dot -->
              <div class="hidden md:flex w-2/12 justify-center my-4">
                <div class="w-6 h-6 bg-[hsl(var(--sps-accent))] rounded-full border-4 border-white shadow-lg z-10"></div>
              </div>

              <!-- Spacer -->
              <div class="w-full md:w-5/12"></div>
            </div>
          ))}
        </div>

        <div class="mt-16 text-center">
          <div class="inline-block p-8 bg-gradient-to-r from-[hsl(var(--sps-primary))] to-[hsl(var(--sps-secondary))] rounded-2xl text-white">
            <p class="text-2xl font-bold mb-2">Continuing Our Journey</p>
            <p class="text-lg">Building the future of industrial engineering solutions</p>
          </div>
        </div>
      </div>
    </section>

    <Footer />
  </div>
</BaseLayout>
