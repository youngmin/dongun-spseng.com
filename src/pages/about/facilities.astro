---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
---

<BaseLayout title="Facilities - SPS Engineering">
  <div class="min-h-screen bg-background">
    <Navigation />

    <!-- Hero Section -->
    <section class="gradient-bg text-white py-16 lg:py-24">
      <div class="max-w-7xl mx-auto px-6 lg:px-8 text-center">
        <h1 class="text-4xl lg:text-6xl font-bold mb-6">Facilities</h1>
        <p class="text-xl lg:text-2xl font-light max-w-3xl mx-auto">
          State-of-the-art manufacturing and engineering facilities
        </p>
      </div>
    </section>

    <!-- Content Section -->
    <section class="py-24 bg-white">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="mb-12">
          <img src="/images/about/facilities.jpg" alt="SPS Engineering Facilities" class="w-full rounded-2xl shadow-xl" />
        </div>

        <div class="mt-16">
          <h2 class="text-3xl lg:text-4xl font-bold text-[hsl(var(--sps-neutral-900))] mb-12 text-center">
            Our Manufacturing Capabilities
          </h2>

          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            <div class="bg-[hsl(var(--sps-neutral-50))] p-8 rounded-2xl">
              <div class="bg-[hsl(var(--sps-primary))] text-white rounded-full w-16 h-16 flex items-center justify-center mb-6">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-[hsl(var(--sps-neutral-900))] mb-4">Advanced Machining</h3>
              <p class="text-[hsl(var(--sps-neutral-500))]">
                CNC machining centers and precision manufacturing equipment for high-quality production
              </p>
            </div>

            <div class="bg-[hsl(var(--sps-neutral-50))] p-8 rounded-2xl">
              <div class="bg-[hsl(var(--sps-primary))] text-white rounded-full w-16 h-16 flex items-center justify-center mb-6">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-[hsl(var(--sps-neutral-900))] mb-4">Heat Treatment</h3>
              <p class="text-[hsl(var(--sps-neutral-500))]">
                Specialized heat treatment facilities for optimal material hardness and durability
              </p>
            </div>

            <div class="bg-[hsl(var(--sps-neutral-50))] p-8 rounded-2xl">
              <div class="bg-[hsl(var(--sps-primary))] text-white rounded-full w-16 h-16 flex items-center justify-center mb-6">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-[hsl(var(--sps-neutral-900))] mb-4">Quality Control</h3>
              <p class="text-[hsl(var(--sps-neutral-500))]">
                Comprehensive testing laboratories ensuring every product meets rigorous standards
              </p>
            </div>

            <div class="bg-[hsl(var(--sps-neutral-50))] p-8 rounded-2xl">
              <div class="bg-[hsl(var(--sps-primary))] text-white rounded-full w-16 h-16 flex items-center justify-center mb-6">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-[hsl(var(--sps-neutral-900))] mb-4">Assembly Lines</h3>
              <p class="text-[hsl(var(--sps-neutral-500))]">
                Modern assembly facilities for efficient and precise product manufacturing
              </p>
            </div>

            <div class="bg-[hsl(var(--sps-neutral-50))] p-8 rounded-2xl">
              <div class="bg-[hsl(var(--sps-primary))] text-white rounded-full w-16 h-16 flex items-center justify-center mb-6">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-[hsl(var(--sps-neutral-900))] mb-4">Warehousing</h3>
              <p class="text-[hsl(var(--sps-neutral-500))]">
                Extensive storage facilities for materials, components, and finished products
              </p>
            </div>

            <div class="bg-[hsl(var(--sps-neutral-50))] p-8 rounded-2xl">
              <div class="bg-[hsl(var(--sps-primary))] text-white rounded-full w-16 h-16 flex items-center justify-center mb-6">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-[hsl(var(--sps-neutral-900))] mb-4">ISO Certified</h3>
              <p class="text-[hsl(var(--sps-neutral-500))]">
                All production processes certified to international quality standards
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <Footer />
  </div>
</BaseLayout>
