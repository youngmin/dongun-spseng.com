---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
---

<BaseLayout title="Biography - SPS Engineering">
  <div class="min-h-screen bg-background">
    <Navigation />

    <!-- Hero Section -->
    <section class="gradient-bg text-white py-16 lg:py-24">
      <div class="max-w-7xl mx-auto px-6 lg:px-8 text-center">
        <h1 class="text-4xl lg:text-6xl font-bold mb-6">Company Biography</h1>
        <p class="text-xl lg:text-2xl font-light max-w-3xl mx-auto">
          About SPS Engineering
        </p>
      </div>
    </section>

    <!-- Content Section -->
    <section class="py-24 bg-white">
      <div class="max-w-4xl mx-auto px-6 lg:px-8">
        <div class="prose prose-lg max-w-none">
          <h2 class="text-3xl font-bold text-[hsl(var(--sps-neutral-900))] mb-6">Who We Are</h2>
          <p class="text-lg text-[hsl(var(--sps-neutral-500))] mb-8 leading-relaxed">
            SPS Engineering is a leading provider of specialized engineering solutions across three key sectors:
            construction machinery, logistics & lifting equipment, and farm implements.
          </p>

          <h2 class="text-3xl font-bold text-[hsl(var(--sps-neutral-900))] mb-6 mt-12">Our Mission</h2>
          <p class="text-lg text-[hsl(var(--sps-neutral-500))] mb-8 leading-relaxed">
            We are dedicated to delivering robust, reliable machinery and equipment solutions for global industries.
            Our commitment to engineering excellence drives us to provide innovative solutions that meet the evolving
            needs of our clients.
          </p>

          <h2 class="text-3xl font-bold text-[hsl(var(--sps-neutral-900))] mb-6 mt-12">Our Vision</h2>
          <p class="text-lg text-[hsl(var(--sps-neutral-500))] mb-8 leading-relaxed">
            To be the premier engineering partner for construction, vehicle, and agriculture sectors worldwide,
            recognized for our quality, innovation, and customer-centric approach.
          </p>

          <div class="grid md:grid-cols-3 gap-8 mt-12">
            <div class="p-6 bg-[hsl(var(--sps-neutral-50))] rounded-lg">
              <h3 class="text-xl font-bold text-[hsl(var(--sps-primary))] mb-3">Construction</h3>
              <p class="text-[hsl(var(--sps-neutral-500))]">
                Comprehensive machinery solutions including chisels, breakers, excavator arms, and vibrohammers.
              </p>
            </div>
            <div class="p-6 bg-[hsl(var(--sps-neutral-50))] rounded-lg">
              <h3 class="text-xl font-bold text-[hsl(var(--sps-primary))] mb-3">Vehicle</h3>
              <p class="text-[hsl(var(--sps-neutral-500))]">
                Logistics and lifting solutions for commercial and industrial applications.
              </p>
            </div>
            <div class="p-6 bg-[hsl(var(--sps-neutral-50))] rounded-lg">
              <h3 class="text-xl font-bold text-[hsl(var(--sps-primary))] mb-3">Agriculture</h3>
              <p class="text-[hsl(var(--sps-neutral-500))]">
                Advanced farming implements and agricultural equipment solutions.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <Footer />
  </div>
</BaseLayout>
