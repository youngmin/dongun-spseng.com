---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Navigation from '../../../components/Navigation.astro';
import Footer from '../../../components/Footer.astro';

const products = [
  {
    name: "HYDRAULIC BREAKER",
    image: "/images/construction/hydraulic-breaker.jpg",
    description: "High-performance hydraulic breakers for demanding demolition and construction applications",
    rating: 4.8,
    reviews: 3
  },
  {
    name: "REVOLUTION BREAKER",
    image: "/images/construction/revolution-breaker.jpg",
    description: "Advanced breaker technology with improved efficiency and reduced maintenance requirements",
    rating: 4.8,
    reviews: 3
  },
  {
    name: "DEMOLITION ATTACHMENT",
    image: "/images/construction/demolition-attachment.jpg",
    description: "Specialized demolition attachments for controlled and efficient structure dismantling",
    rating: 4.8,
    reviews: 3
  }
];
---

<BaseLayout title="Breakers and Demolition Attachment - SPS Engineering">
  <div class="min-h-screen bg-background">
    <Navigation />

    <!-- Hero Section -->
    <section class="gradient-bg text-white py-16 lg:py-24">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <h1 class="text-4xl lg:text-6xl font-bold mb-6">Breakers and Demolition Attachment</h1>
        <p class="text-xl lg:text-2xl font-light max-w-3xl">
          Professional-grade hydraulic breakers and demolition equipment for the toughest jobs
        </p>
      </div>
    </section>

    <!-- Introduction Section -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 items-center mb-16">
          <div>
            <h2 class="text-3xl lg:text-4xl font-bold text-[hsl(var(--sps-neutral-900))] mb-6">
              Industry-Leading Hydraulic Breakers
            </h2>
            <p class="text-lg text-[hsl(var(--sps-neutral-500))] mb-6 leading-relaxed">
              SPS Engineering offers a comprehensive range of hydraulic breakers and demolition attachments designed
              for maximum productivity and durability. Our products are engineered to deliver exceptional performance
              in the most demanding construction and demolition applications.
            </p>
            <ul class="space-y-3">
              <li class="flex items-start">
                <svg class="w-6 h-6 text-[hsl(var(--sps-accent))] mr-3 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-[hsl(var(--sps-neutral-500))]">High impact energy for faster breaking</span>
              </li>
              <li class="flex items-start">
                <svg class="w-6 h-6 text-[hsl(var(--sps-accent))] mr-3 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-[hsl(var(--sps-neutral-500))]">Advanced noise and vibration reduction</span>
              </li>
              <li class="flex items-start">
                <svg class="w-6 h-6 text-[hsl(var(--sps-accent))] mr-3 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-[hsl(var(--sps-neutral-500))]">Easy maintenance and service</span>
              </li>
              <li class="flex items-start">
                <svg class="w-6 h-6 text-[hsl(var(--sps-accent))] mr-3 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-[hsl(var(--sps-neutral-500))]">Compatible with major excavator brands</span>
              </li>
            </ul>
          </div>
          <div>
            <img
              src="/assets/photo-1523848309072-c199db53f137_1749678706477.jpg"
              alt="Construction equipment"
              class="rounded-2xl shadow-xl"
            />
          </div>
        </div>

        <!-- Products Grid -->
        <div class="mt-16">
          <h2 class="text-3xl font-bold text-[hsl(var(--sps-neutral-900))] mb-8 text-center">Our Product Range</h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {products.map((product) => (
              <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
                <div class="aspect-video bg-gray-200">
                  <img
                    src={product.image}
                    alt={product.name}
                    class="w-full h-full object-cover"
                  />
                </div>
                <div class="p-6">
                  <h3 class="text-xl font-bold text-[hsl(var(--sps-neutral-900))] mb-3">
                    {product.name}
                  </h3>
                  <p class="text-[hsl(var(--sps-neutral-500))] mb-4">
                    {product.description}
                  </p>
                  <div class="flex items-center justify-between">
                    <div class="flex items-center gap-1">
                      {Array.from({ length: 5 }).map((_, i) => (
                        <svg
                          class={`w-5 h-5 ${i < Math.floor(product.rating) ? 'text-[hsl(var(--sps-accent))]' : 'text-gray-300'}`}
                          fill="currentColor"
                          viewBox="0 0 20 20"
                        >
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                        </svg>
                      ))}
                      <span class="text-sm text-[hsl(var(--sps-neutral-500))] ml-2">
                        {product.rating} ({product.reviews} reviews)
                      </span>
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Social Media -->
    <section class="py-12 bg-[hsl(var(--sps-neutral-50))]">
      <div class="max-w-7xl mx-auto px-6 lg:px-8 text-center">
        <h3 class="text-2xl font-bold text-[hsl(var(--sps-neutral-900))] mb-6">Connect With Us</h3>
        <a
          href="https://www.facebook.com/sps.breaker"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 bg-[#1877F2] text-white px-6 py-3 rounded-lg font-semibold hover:bg-[#166fe5] transition-colors"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
          Follow us on Facebook
        </a>
      </div>
    </section>

    <Footer />
  </div>
</BaseLayout>
