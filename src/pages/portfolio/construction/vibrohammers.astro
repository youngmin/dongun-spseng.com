---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Navigation from '../../../components/Navigation.astro';
import Footer from '../../../components/Footer.astro';

const products = [
  {
    name: "VIBRO HAMMER",
    description: "Outstanding work ability and mobility and equipped with high-powered hydraulic piston motor",
    features: [
      "High-powered hydraulic piston motor",
      "Excellent work ability",
      "Superior mobility",
      "Efficient pile driving performance"
    ],
    applications: ["Pile driving", "Sheet pile installation", "Foundation work", "Marine construction"]
  },
  {
    name: "VIBRO RIPPER",
    description: "SPS ENG VIBRO-RIPPER is one of the ECO-friendly rock breakers by reducing noise",
    features: [
      "ECO-friendly operation",
      "Reduced noise levels",
      "Efficient rock breaking",
      "Environmentally conscious design"
    ],
    applications: ["Rock breaking", "Soil compaction", "Trenching", "Urban construction"]
  }
];
---

<BaseLayout title="Vibrohammers and Vibrorippers - SPS Engineering">
  <div class="min-h-screen bg-background">
    <Navigation />

    <!-- Hero Section -->
    <section class="gradient-bg text-white py-16 lg:py-24">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <h1 class="text-4xl lg:text-6xl font-bold mb-6">Vibrohammers and Vibrorippers</h1>
        <p class="text-xl lg:text-2xl font-light max-w-3xl">
          High-performance vibratory equipment for piling and rock breaking applications
        </p>
      </div>
    </section>

    <!-- Introduction -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl lg:text-4xl font-bold text-[hsl(var(--sps-neutral-900))] mb-6">
            Innovative Vibratory Technology
          </h2>
          <p class="text-lg text-[hsl(var(--sps-neutral-500))] max-w-3xl mx-auto leading-relaxed">
            Our vibrohammers and vibrorippers combine powerful performance with environmental responsibility.
            Designed for efficiency and reduced environmental impact, these tools are ideal for modern construction sites.
          </p>
        </div>

        <!-- Products -->
        <div class="grid lg:grid-cols-2 gap-12 mb-16">
          {products.map((product) => (
            <div class="bg-[hsl(var(--sps-neutral-50))] rounded-2xl overflow-hidden hover:shadow-xl transition-shadow duration-300">
              <div class="bg-gradient-to-r from-[hsl(var(--sps-primary))] to-[hsl(var(--sps-secondary))] p-8 text-white">
                <h3 class="text-3xl font-bold mb-4">{product.name}</h3>
                <p class="text-lg leading-relaxed">{product.description}</p>
              </div>
              <div class="p-8">
                <h4 class="text-xl font-bold text-[hsl(var(--sps-neutral-900))] mb-4">Key Features</h4>
                <ul class="space-y-3 mb-6">
                  {product.features.map((feature) => (
                    <li class="flex items-start">
                      <svg class="w-5 h-5 text-[hsl(var(--sps-accent))] mr-3 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                      </svg>
                      <span class="text-[hsl(var(--sps-neutral-500))]">{feature}</span>
                    </li>
                  ))}
                </ul>

                <h4 class="text-xl font-bold text-[hsl(var(--sps-neutral-900))] mb-4">Applications</h4>
                <div class="flex flex-wrap gap-2">
                  {product.applications.map((app) => (
                    <span class="bg-white border-2 border-[hsl(var(--sps-primary))] text-[hsl(var(--sps-primary))] px-4 py-2 rounded-full text-sm font-semibold">
                      {app}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          ))}
        </div>

        <!-- Technical Advantages -->
        <div class="bg-gradient-to-r from-[hsl(var(--sps-primary))] to-[hsl(var(--sps-secondary))] rounded-2xl p-12 text-white">
          <h2 class="text-3xl font-bold mb-8 text-center">Technical Advantages</h2>
          <div class="grid md:grid-cols-3 gap-8">
            <div class="text-center">
              <div class="bg-white/20 rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-4">
                <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2">High Power Output</h3>
              <p>Superior hydraulic motor performance for demanding applications</p>
            </div>
            <div class="text-center">
              <div class="bg-white/20 rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-4">
                <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2">ECO-Friendly</h3>
              <p>Reduced noise and vibration for environmental compliance</p>
            </div>
            <div class="text-center">
              <div class="bg-white/20 rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-4">
                <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2">Versatile</h3>
              <p>Adaptable to various soil conditions and project requirements</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Benefits Section -->
    <section class="py-16 bg-[hsl(var(--sps-neutral-50))]">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-[hsl(var(--sps-neutral-900))] mb-12 text-center">Why Choose SPS Vibratory Equipment?</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="bg-white p-6 rounded-lg text-center">
            <div class="bg-[hsl(var(--sps-primary))] text-white rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-[hsl(var(--sps-neutral-900))] mb-2">Proven Reliability</h3>
            <p class="text-sm text-[hsl(var(--sps-neutral-500))]">Tested in demanding conditions worldwide</p>
          </div>
          <div class="bg-white p-6 rounded-lg text-center">
            <div class="bg-[hsl(var(--sps-primary))] text-white rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-[hsl(var(--sps-neutral-900))] mb-2">High Productivity</h3>
            <p class="text-sm text-[hsl(var(--sps-neutral-500))]">Faster project completion times</p>
          </div>
          <div class="bg-white p-6 rounded-lg text-center">
            <div class="bg-[hsl(var(--sps-primary))] text-white rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-[hsl(var(--sps-neutral-900))] mb-2">Cost Effective</h3>
            <p class="text-sm text-[hsl(var(--sps-neutral-500))]">Lower operational costs</p>
          </div>
          <div class="bg-white p-6 rounded-lg text-center">
            <div class="bg-[hsl(var(--sps-primary))] text-white rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-[hsl(var(--sps-neutral-900))] mb-2">Expert Support</h3>
            <p class="text-sm text-[hsl(var(--sps-neutral-500))]">Comprehensive technical assistance</p>
          </div>
        </div>
      </div>
    </section>

    <Footer />
  </div>
</BaseLayout>
